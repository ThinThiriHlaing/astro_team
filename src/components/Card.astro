---
import "../css/style.css"
const {title,img_url}=Astro.props;
---


<div class="card animate__animated">
    <div class="circle-image-profile">
      <img src={img_url} class="inner" alt="p-1" />

      <div class="bar left"></div>
      <div class="bar right"></div>
    </div>

    <div class="name-info">
      <h4 class="name">{title}</h4>
      <h5 class="level">Level - 10</h5>
    </div>

    <div class="member-info">
      <div class="follower">
        <div class="icon">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            fill="currentColor"
            class="bi bi-person-fill"
            viewBox="0 0 16 16"
          >
            <path
              d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"
            ></path>
          </svg>
        </div>
        <div class="number">32</div>
      </div>
      <div style="border: 0.5px solid #dbdbdb"></div>
      <div class="point">
        <div class="icon">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            fill="currentColor"
            class="bi bi-star-fill"
            viewBox="0 0 16 16"
          >
            <path
              d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"
            ></path>
          </svg>
        </div>
        <div class="number">450</div>
      </div>
    </div>

    <div class="add-friend">Add Friend</div>
</div>